<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/world"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:id="@+id/hello_textBox"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/hello_btn"
        android:layout_toRightOf="@id/hello_textBox"
        android:text="@string/hello" />

    <Button
        android:id="@+id/bye_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hello_btn"
        android:layout_below="@+id/hello_btn"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="@string/bye" />

</RelativeLayout>