<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.theboss.tictactoe.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/button_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:text="@string/empty_Str" />


    <Button
        android:id="@+id/button_Two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_One"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/button_One"
        android:onClick="onClick"
        android:text="@string/empty_Str" />

    <Button
        android:id="@+id/button_Three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_Two"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/button_Two"
        android:onClick="onClick"
        android:text="@string/empty_Str" />

    <Button
        android:id="@+id/button_Four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_One"
        android:layout_below="@+id/button_One"
        android:layout_marginTop="26dp"
        android:onClick="onClick"
        android:text="@string/empty_Str" />

    <Button
        android:id="@+id/button_Five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_Two"
        android:layout_alignTop="@+id/button_Four"
        android:onClick="onClick"
        android:text="@string/empty_Str" />

    <Button
        android:id="@+id/button_Six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_Three"
        android:layout_alignTop="@+id/button_Five"
        android:onClick="onClick"
        android:text="@string/empty_Str" />

    <Button
        android:id="@+id/button_Seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_Four"
        android:layout_below="@+id/button_Four"
        android:layout_marginTop="24dp"
        android:onClick="onClick"
        android:text="@string/empty_Str" />

    <Button
        android:id="@+id/button_Eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_Seven"
        android:layout_alignBottom="@+id/button_Seven"
        android:layout_alignStart="@+id/button_Five"
        android:onClick="onClick"
        android:text="@string/empty_Str" />

    <Button
        android:id="@+id/button_Nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_Six"
        android:layout_alignTop="@+id/button_Eight"
        android:onClick="onClick"
        android:text="@string/empty_Str" />

    <Button
        android:id="@+id/button_Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_Seven"
        android:layout_below="@+id/button_Seven"
        android:layout_marginTop="32dp"
        android:onClick="onClick"
        android:text="@string/btn_reset" />
</RelativeLayout>
